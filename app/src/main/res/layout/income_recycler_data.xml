<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
 android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_height="match_parent">
 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:layout_margin="5dp"
     android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24 february 2023"
            android:textAppearance="?android:textAppearanceSmall"
             android:textStyle="bold"
             android:id="@+id/date_txt_income"
            android:textColor="@color/black"
            />
    </RelativeLayout>
     <RelativeLayout
         android:layout_width="0dp"
         android:layout_weight="2"
         android:layout_height="wrap_content"
         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Type"
             android:maxLines="1"
             android:textAppearance="?android:textAppearanceSmall"
             android:textStyle="bold"
             android:id="@+id/type_txt_income"
             android:textColor="@color/black"
         />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Description"
             android:textAppearance="?android:textAppearanceSmall"
             android:textStyle="bold"
             android:maxLines="1"
             android:layout_below="@id/type_txt_income"
             android:id="@+id/note_txt_income"
             android:textColor="@color/black"
         />
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="9000000"
             android:textAppearance="?android:textAppearanceSmall"
             android:textStyle="bold"
             android:maxLines="1"

             android:id="@+id/ammount_txt_income"
             android:textColor="@color/black"
             />
     </RelativeLayout>
 </LinearLayout>
</androidx.cardview.widget.CardView>